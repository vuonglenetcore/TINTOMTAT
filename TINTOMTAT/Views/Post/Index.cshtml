}
@model TINTOMTAT.Models.BaiVietPortalViewModel.BaiVietDetailViewModel

<div class="section-cotent">
    <div class="container">
        <div class="row">
            <h1 style="font-weight:700;">@Model.TenBaiViet</h1>
